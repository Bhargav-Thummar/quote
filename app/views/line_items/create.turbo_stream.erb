<%= turbo_stream.update nested_dom_id(@line_item_date, LineItem.new), "" %>

<%= turbo_stream.append nested_dom_id(@line_item_date, "line_items") do %>
  <%= render @line_item, bid: @bid, line_item_date: @line_item_date %>
<% end %>

<%= turbo_stream.update dom_id(@bid, :total) do %>
  <%= render "bids/total", bid: @bid %>
<% end %>

<%= render_turbo_stream_flash_messages %>