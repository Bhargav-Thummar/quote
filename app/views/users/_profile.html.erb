<main class="container">
  <% if current_user.profile_complete? %>
  <div class="row shadow-lg p-3 mb-5 bg-body rounded">
    <div class="col-8">
      Here's what I know about you:
      <ul class="mt-4">
        <li class="leading-8">Your name is <strong><%= current_user.name %>.</strong></li>
        <li class="leading-8">You are <strong><%= current_user.age %> years old.</strong></li>
        <li class="leading-8">You live in <strong><%= current_user.country %>.</strong></li>
        <li class="leading-8">Your address is <strong><%= current_user.address %>, <%= current_user.city %>, <%= current_user.zip %></strong></li>
        <li class="leading-8">Your email is <strong><%= current_user.email %></strong></li>
        <li class="leading-8">About you:<br /><strong><%= current_user.bio %></strong></li>
      </ul>
    </div>
    <div class="col-4">
        <img class="me-4 rounded" src="https://api.lorem.space/image/face?w=260&h=260" />
      </div>
  <div>
  <% else %>
    <div class="row shadow-lg p-3 mb-5 bg-body rounded">
      <div class = "col-8">
        <%= turbo_frame_tag current_user do %>
          <%= simple_form_for current_user, method: :put do |f| %>
            <div>
              Please complete your profile.
            </div>
            <div class="progress">
              <div class="progress-bar bg-success" role="progressbar" style="width: <%=current_user.profile_complete.to_s + '%' %>" aria-valuenow="<%=current_user.profile_complete%>" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <div class="mt-2">
              <%= render "users/#{current_user.missing_profile_section}", f: f %>
            </div>
            <%= f.submit :save, class: "btn btn-success mt-3" %>
          <% end %>
        <% end %>
      </div>
      <div class="col-4">
        <img class="me-4 rounded" src="https://api.lorem.space/image/face?w=260&h=260" />
      </div>
    </div>
  <% end %>
</main>