<header class="navbar">
  <% if user_signed_in? %>
    <div class="navbar__brand">
       <%= current_company.name %>
    </div>
    <div class="navbar__name">
      <%= current_user.name || current_user.email %>
    </div>
    <%= link_to "Profile", user_path(current_user), class: "btn btn-outline-light me-2" %>
    <%= button_to "Sign out",
                  destroy_user_session_path,
                  method: :delete,
                  class: "btn btn-outline-danger" %>
  <% else %>
    <%= link_to "Sign in",
                new_user_session_path,
                class: "btn btn-success navbar__right" %>
  <% end %>
</header>